<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	version="3.0">
	
	<display-name>OutlawSource</display-name>
    
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>	
	
	<!-- Expose Images -->
	<servlet>
		<servlet-name>ListWsDefinitions</servlet-name>
		<servlet-class>org.apache.catalina.servlets.DefaultServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>0</param-value>
		</init-param>
		<init-param>
			<param-name>listings</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>100</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>ListWsDefinitions</servlet-name>
		<url-pattern>/Images/*</url-pattern>
	</servlet-mapping>
	
	<jsp-config>
       <taglib>
         <taglib-uri>
           http://www.outlawsource.net/web/htmlhelper
         </taglib-uri>
         <taglib-location>
           /WEB-INF/tags/htmlhelper.tld
         </taglib-location>
       </taglib> 
    </jsp-config>
	
	<!-- Login Stuff -->
	<resource-ref>
	    <description>DB Connection</description>
	    <res-ref-name>jdbc</res-ref-name>
	    <res-type>javax.sql.DataSource</res-type>
	    <res-auth>Container</res-auth>
	</resource-ref>
	
	<security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>webuser</role-name>
    </security-role>
	<security-constraint>
		<display-name>SecurityConstraint</display-name>
		<web-resource-collection>
			<web-resource-name>WRCollection</web-resource-name>
	        <url-pattern>/Resources/Stats/*</url-pattern>
	    </web-resource-collection>
	       <auth-constraint>
	             <role-name>admin</role-name>
	             <role-name>webuser</role-name>
	       </auth-constraint>
	       <user-data-constraint>
	           <transport-guarantee>NONE</transport-guarantee>
	       </user-data-constraint>
	  </security-constraint>
	 <login-config>
	       <auth-method>FORM</auth-method>
	    <form-login-config>
	             <form-login-page>/Login.jsp</form-login-page>
	            <form-error-page>/LoginError.jsp</form-error-page>
	     </form-login-config>
	</login-config>   
	
	<filter>
	   <filter-name>UserFilter</filter-name>
	   <filter-class>net.outlawsource.web.filters.UserFilter</filter-class>
	</filter>
	<filter-mapping>
	   <filter-name>UserFilter</filter-name>
	   <url-pattern>/Resources/Stats/*</url-pattern>
	</filter-mapping>  
</web-app>